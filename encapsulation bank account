public class bank_account{
    String name;
    private int balance=0;
    public void name(String a){
        name=a;
    }
    public void deposite(int d){
        if (d<0){
            System.out.println("negative number cannot deposite");
        }
        else{
            
            System.out.println("balance"+(balance+d));
            balance=d;
        }
    } 
    public void withdraw(int w){
        if (w>balance){
           System.out.println("insufficient fund"); 
        }
        else if (w<0){
            System.out.println("negative number not withdraw");
        }
        else{
            System.out.println("withdraw amount:"+w);
            balance=balance-w;
        }
    }
    private void showbalance(){
        System.out.println("balance:"+balance);
    }    
    public static void main(String[] argv){
        bank_account ob=new bank_account();
        ob.name("sathish");
        ob.deposite(500);
        ob.withdraw(250);
        ob.showbalance();
    }
    
}
